@model ProductViewModel

@section title {
    <h3>@Model.Product.Name</h3>
}

<div class="text-info" asp-validation-summary="All"></div>
<form method="post" asp-controller="Products" asp-action="Edit">
    <div>
        <input type="hidden" asp-for="Product.ProductId" />
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.CategoryId"></label>
        </div>
        <div class="col-6">
            <select asp-for="Product.CategoryId" class="form-control">
                <option>--Please Select--</option>
                @if (Model.Categories != null && Model.Categories.Count() > 0)
                {
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                }
                else
                {
                    <option>Data has not been loaded</option>
                }
            </select>


        </div>
        <div class="col"><span class="text-info" asp-validation-for="Product.CategoryId"></span></div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Name" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Price"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Price" class="form-control" min="0" step="any" />
        </div>
        <div class="col">
            <span class="text-info" asp-validation-for=" Product.Price"></span>

        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Quantity"></label>

        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Quantity" value="1" min="1" class="form-control" />

        </div>
        <div class="col">
            <span class="text-info" asp-validation-for="Product.Quantity"></span>

        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <button type="submit" class="btn btn-info" >Update</button>
        </div>
    </div>

</form>