@model SalesViewModel

@section title {
    <div class="row">
        <div class="col-7">
            <h3>Cashiers Console</h3>
        </div>
        <div class="col-2">
            <label for="cashier">Cashier Name:</label>
            <div class="col-3">
                @* Display Cashier Name *@
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-4">
        <select asp-for="SelectedCategoryId" class="form-control">
            <option>- Please Select -</option>
            @if (Model.Categories != null && Model.Categories.Count() > 0)
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            }
        </select>
        <br />
        <div id="productsPartial">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#SelectedCategoryId').on("change", function () {
                alert($(this).val())
                console.log($(this).val());
                loadProducts($(this).val())

            });
        });
        function loadProducts(t) {

            $.ajax({
                type: "GET",
                url: "/Products/ProductsByCategoryPartial?categoryId=" + t,

                processData: false,
                contentType: false,
                success: function (data) {
                    console.log(data)
                    $("#productsPartial").html(data);
                }
            });
        }

    </script>
}
